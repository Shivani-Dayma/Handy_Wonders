<h2> WELLCOME TO E-COMMERCE WEBSITE</h2>
<div class="container">
    <div class="row">
    <% @products=Product.all%>
    <% @products.each do |pro| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
           <% if pro.present? && pro.image.attached? %>
          <%= image_tag(url_for(pro.image), class: "card-img-top") %>
         <% end%>
          <div class="card-body">
            <h5 class="card-title"></h5>
            <p class="card-text"><%= pro.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><span class="text-decoration-line-through">Actual Price -<%= pro.actual_price %></span></li>
            <li class="list-group-item">Current Price -<%= pro.current_price %></li>
          </ul>
          <div class="card-body">
              <a href="#" class="btn btn-outline-success"><i class="bi bi-cart2"></i> Add To Cart</a>
              <%# <%= link_to <i class="bi bi-cart2">,new_customer_cart_path(product_id:pro.id,price:pro.current_price),class:"btn btn-outline-success"%> 
              <a href="#" class="btn btn-outline-primary">Buy Now</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>


